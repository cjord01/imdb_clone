<div class="row">
  <div class="large-4 columns">
    <%= form_for @role do |f| %>
      Movie<%= f.collection_select(:movie_id, @movies, :id, :title) %>
      Actor<%= f.collection_select(:actor_id, @actors, :id, :name) %>
      <%= f.text_field :name, placeholder: "Character Name" %>
      <%= f.submit "Add Role", :class=>"button"%>
    <% end %>
  </div>
</div>

